---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import FAQ from "../components/FAQ.jsx";
import { CheckCircle2, XCircle } from "lucide-react";
---

<Layout title="Service Plans | Therma Heat">
    <main class="bg-gray-50">
        <!-- Hero -->
        <div class="bg-white py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2 class="text-base font-semibold leading-7 text-accent">
                        Boiler Cover & Care
                    </h2>
                    <p
                        class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
                    >
                        Complete Peace of Mind
                    </p>
                    <p class="mt-6 text-lg leading-8 text-gray-600">
                        Avoid unexpected repair bills. Our monthly service plans
                        keep your home warm and your system running efficiently
                        all year round.
                    </p>
                </div>
            </div>
        </div>

        <!-- Pricing Tiers -->
        <div class="py-12 sm:py-16">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div
                    class="isolate mx-auto grid max-w-md grid-cols-1 gap-y-8 sm:mt-10 sm:mx-0 sm:max-w-none sm:grid-cols-3 lg:gap-x-8 xl:gap-x-12"
                >
                    <!-- Bronze -->
                    <div
                        class="rounded-3xl p-8 ring-1 ring-gray-200 bg-white shadow-sm hover:shadow-lg transition-all"
                    >
                        <h3
                            class="id text-lg font-semibold leading-8 text-gray-900"
                        >
                            Bronze Care
                        </h3>
                        <p class="mt-4 text-sm leading-6 text-gray-600">
                            Essential maintenance for your boiler.
                        </p>
                        <p class="mt-6 flex items-baseline gap-x-1">
                            <span
                                class="text-4xl font-bold tracking-tight text-gray-900"
                                >£8.00</span
                            >
                            <span
                                class="text-sm font-semibold leading-6 text-gray-600"
                                >/month</span
                            >
                        </p>
                        <ul
                            role="list"
                            class="mt-8 space-y-3 text-sm leading-6 text-gray-600"
                        >
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Annual Boiler
                                Service
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Safety Certificate
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-gray-300">✕</span> Breakdown Labour
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-gray-300">✕</span> Parts Included
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-gray-300">✕</span> Radiators & Pipework
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="mt-8 block rounded-md bg-gray-100 px-3 py-2 text-center text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600"
                            >Sign Up</a
                        >
                    </div>

                    <!-- Silver -->
                    <div
                        class="rounded-3xl p-8 ring-2 ring-accent bg-white shadow-xl scale-105 relative"
                    >
                        <span
                            class="absolute top-0 -translate-y-1/2 left-1/2 -translate-x-1/2 rounded-full bg-accent px-3 py-1 text-sm font-semibold text-white shadow-sm"
                            >Most Popular</span
                        >
                        <h3
                            class="id text-lg font-semibold leading-8 text-gray-900"
                        >
                            Silver Cover
                        </h3>
                        <p class="mt-4 text-sm leading-6 text-gray-600">
                            Annual service plus breakdown protection.
                        </p>
                        <p class="mt-6 flex items-baseline gap-x-1">
                            <span
                                class="text-4xl font-bold tracking-tight text-gray-900"
                                >£18.00</span
                            >
                            <span
                                class="text-sm font-semibold leading-6 text-gray-600"
                                >/month</span
                            >
                        </p>
                        <ul
                            role="list"
                            class="mt-8 space-y-3 text-sm leading-6 text-gray-600"
                        >
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Annual Boiler
                                Service
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Safety Certificate
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Breakdown Labour
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Parts Included
                                (Boiler)
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-gray-300">✕</span> Radiators & Pipework
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="mt-8 block rounded-md bg-accent px-3 py-2 text-center text-sm font-semibold leading-6 text-white hover:bg-accent/90 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
                            >Sign Up</a
                        >
                    </div>

                    <!-- Gold -->
                    <div
                        class="rounded-3xl p-8 ring-1 ring-gray-200 bg-white shadow-sm hover:shadow-lg transition-all"
                    >
                        <h3
                            class="id text-lg font-semibold leading-8 text-gray-900"
                        >
                            Gold System
                        </h3>
                        <p class="mt-4 text-sm leading-6 text-gray-600">
                            Total protection for your entire heating system.
                        </p>
                        <p class="mt-6 flex items-baseline gap-x-1">
                            <span
                                class="text-4xl font-bold tracking-tight text-gray-900"
                                >£24.00</span
                            >
                            <span
                                class="text-sm font-semibold leading-6 text-gray-600"
                                >/month</span
                            >
                        </p>
                        <ul
                            role="list"
                            class="mt-8 space-y-3 text-sm leading-6 text-gray-600"
                        >
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Annual Boiler
                                Service
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Safety Certificate
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Breakdown Labour
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Parts Included
                                (System)
                            </li>
                            <li class="flex gap-x-3">
                                <span class="text-green-600">✓</span> Radiators &
                                Pipework
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="mt-8 block rounded-md bg-gray-100 px-3 py-2 text-center text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600"
                            >Sign Up</a
                        >
                    </div>
                </div>
            </div>
        </div>

        <FAQ client:visible />
    </main>
</Layout>
