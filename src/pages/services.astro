---
import Layout from "../layouts/Layout.astro";
import { Flame, ThermometerSun, Droplets, CheckCircle2 } from "lucide-react";
---

<Layout title="Services | Therma Heat">
    <main class="bg-white">
        <!-- Header -->
        <div class="bg-slate-900 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-header font-bold tracking-tight text-white sm:text-6xl"
                    >
                        Heating Intelligence
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-slate-300 font-body">
                        Data-driven heating solutions. We install systems that
                        learn your habits and save you money.
                    </p>
                </div>
            </div>
        </div>

        <!-- content -->
        <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
                <!-- Boiler -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-orange-50 border border-orange-200 rounded-lg flex items-center justify-center text-orange-600 mb-2 shadow-sm"
                    >
                        <Flame size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        High-Efficiency Boiler Installation
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        Upgrade to A-Rated efficiency. We install Worcester
                        Bosch and Vaillant boilers that can lower your gas
                        consumption by up to 30%.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> 10-Year Manufacturer
                            Warranties
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Hydrogen-Ready
                            Models
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> 0% Finance
                            Available
                        </li>
                    </ul>
                </div>

                <!-- Power Flush -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-orange-50 border border-orange-200 rounded-lg flex items-center justify-center text-orange-600 mb-2 shadow-sm"
                    >
                        <Droplets size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        Thermal Imaging & Power Flushing
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        Cold spots in your radiators? We use thermal cameras to
                        diagnose sludge build-up and Magnacleanse technology to
                        restore your system to peak efficiency.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Infrared
                            Diagnostics (See the blockage)
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Magnetic
                            Filtration installation
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Restore up
                            to 15% efficiency
                        </li>
                    </ul>
                </div>

                <!-- Smart Climate -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-orange-50 border border-orange-200 rounded-lg flex items-center justify-center text-orange-600 mb-2 shadow-sm"
                    >
                        <ThermometerSun size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        Smart Climate Control
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        Control your heating from your phone. We integrate Nest,
                        Hive, and Tado systems for room-by-room zoning and
                        intelligent scheduling.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Geo-fencing
                            (Heating off when you leave)
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Open Window
                            Detection
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-orange-600" /> Voice control
                            integration
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
</Layout>
