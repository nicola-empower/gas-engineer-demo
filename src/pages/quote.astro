<Layout title="Get a Quote | Therma Heat">
    <main class="bg-gray-50 min-h-screen">
        <!-- Header -->
        <div class="bg-white py-16 text-center shadow-sm">
            <h1
                class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-4"
            >
                Instant Quotes. Transparent Pricing. No Hidden Fees.
            </h1>
            <p class="text-lg leading-8 text-gray-600 max-w-2xl mx-auto px-6">
                Ready to upgrade your home heating? Use our smart quoting tool
                to get an accurate, fixed-price estimate in under 60 seconds. No
                waiting on hold, no sales pressure.
            </p>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 py-24">
            <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto mb-24">
                <!-- Option A -->
                <div
                    class="bg-white rounded-2xl shadow-xl p-8 border-2 border-transparent hover:border-accent transition-all duration-300 transform hover:-translate-y-1"
                >
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">
                        I need a new system
                    </h2>
                    <p class="text-gray-600 mb-8 h-20">
                        Answer a few questions about your home (bedrooms,
                        bathrooms, flue type) and get a range of fixed-price
                        options instantly.
                    </p>
                    <a
                        href="#"
                        class="block w-full text-center rounded-lg bg-primary px-6 py-4 text-white font-bold hover:bg-primary/90 transition-colors"
                    >
                        Start Smart Quote
                    </a>
                </div>

                <!-- Option B -->
